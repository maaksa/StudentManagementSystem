<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--pomocni prozor za dodavanje sr skole-->

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>


<BorderPane prefHeight="428.0" prefWidth="581.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studsluzba.client.fxmlcontrollers.OpenTokStudijaController">

    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label text="Upis godina" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Text fx:id="upisGodina" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Obnova godina" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <!--fx:id koristimo samo za one forme za koje ce nam biti potrebno da pristupamo iz java koda-->
            <Text fx:id="obnovaGodina" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <Label text="Upis godina" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="novaGodina" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Button onAction="#saveUpisObnova" text="Sacuvaj" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <HBox alignment="bottom_right" spacing="30" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Label text="Upis obnova" GridPane.halignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <HBox GridPane.columnIndex="0" GridPane.rowIndex="9">
                    <fx:define>
                        <ToggleGroup fx:id="polGroup"/>
                    </fx:define>
                    <RadioButton fx:id="radioButtonUpis" text="Upis" toggleGroup="$polGroup" selected="true">
                        <HBox.margin>
                            <Insets right="3.0"/>
                        </HBox.margin>
                    </RadioButton>

                    <RadioButton fx:id="radioButtonObnova" text="Obnova" toggleGroup="$polGroup">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </RadioButton>
                </HBox>
            </HBox>

        </GridPane>
    </center>
    <bottom>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <TableView fx:id="programiTable">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Ime">
                            <cellValueFactory><!--da bi nam se java bean klasa smestila u tabelu preko get i set metoda-->
                                <PropertyValueFactory
                                        property="nazivPredmeta"/><!--skraceniNaziv je ime polja za tu klasu za koju zelimo da nam se prikazu podatci u tabeli-->
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Sifra">
                            <cellValueFactory><!--da bi nam se java bean klasa smestila u tabelu preko get i set metoda-->
                                <PropertyValueFactory
                                        property="sifraPredmeta"/><!--skraceniNaziv je ime polja za tu klasu za koju zelimo da nam se prikazu podatci u tabeli-->
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </bottom>

</BorderPane>

