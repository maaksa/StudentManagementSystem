<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane fx:id="mainSearchPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="studsluzba.client.fxmlcontrollers.StudentController" >

    <top>
        <fx:include source="menuBar.fxml"/>
    </top>

    <center>
        <BorderPane>
            <center>
                <fx:include source="searchStudentTabPane.fxml"/>
            </center>
        </BorderPane>
    </center>

    <bottom>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <TableView fx:id="studentiTable">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Ime">
                            <cellValueFactory><!--da bi nam se java bean klasa smestila u tabelu preko get i set metoda-->
                                <PropertyValueFactory property="ime"/><!--skraceniNaziv je ime polja za tu klasu za koju zelimo da nam se prikazu podatci u tabeli-->
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Srednje Ime">
                            <cellValueFactory><!--da bi nam se java bean klasa smestila u tabelu preko get i set metoda-->
                                <PropertyValueFactory property="srednjeIme"/><!--skraceniNaziv je ime polja za tu klasu za koju zelimo da nam se prikazu podatci u tabeli-->
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Prezime">
                            <cellValueFactory>
                                <PropertyValueFactory property="prezime"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </bottom>

</BorderPane>
