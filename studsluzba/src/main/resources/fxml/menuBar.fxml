<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="menu" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="studsluzba.client.fxmlcontrollers.MenuBarController"> <!--ovaj fxml fajl ima svoj kontroler(moze ih i vise biti vezano za jedan), MenuBarController-->
    <MenuBar fx:id="menuBar" style="-fx-background-color: #ADD8E6;">
        <Menu text="Pretraži">
            <items>
                <MenuItem text="Studenti"/>
                <MenuItem text="Nastavnici"/>
                <MenuItem text="Predmeti"/>
                <MenuItem text="Ispitni rokovi"/>
            </items>
        </Menu>
        <Menu text="Novi">
            <items>
                <MenuItem text="Student" onAction="#openNewStudent"/>
                <MenuItem text="Nastavnik"/>
                <MenuItem text="Predmet"/>
            </items>
        </Menu>
        <Menu text="Administracija">
            <items>
                <MenuItem text="Šifarnici"/>
                <!--zelimo kada kliknemo na studProgrami da nam se promeni scena u controlleru -->
                <!--ime metode u kontroleru, imamo akciju da nam se pokaze forma to je metoda u controlleru koji je povezan sa ovim fajlom-->
                <MenuItem text="Studijski programi" onAction="#openStudProgrami"/>
                <MenuItem text="Školska godina"/>
                <MenuItem text="Korisnici"/>
            </items>
        </Menu>
    </MenuBar>

</VBox>
