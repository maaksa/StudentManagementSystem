<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="menu" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="studsluzba.client.fxmlcontrollers.MenuBarController">
    <MenuBar fx:id="menuBar" style="-fx-background-color: #ADD8E6;">
        <Menu text="Pretraži">
            <items>
                <MenuItem text="Studenti" onAction="#findStudent"/>
                <MenuItem text="Nastavnici" onAction="#findNastavnik"/>
                <MenuItem text="Predmeti"/>
                <MenuItem text="Ispiti" onAction="#findIspit"/>
                <MenuItem text="Studijski program" onAction="#findStudProgram"/>
            </items>
        </Menu>
        <Menu text="Novi">
            <items>
                <MenuItem text="Student" onAction="#openNewStudent"/>
                <MenuItem text="Slusa predmet" onAction="#newSlusaPredmet"/>
                <MenuItem text="Ispit" onAction="#newIspit"/>
            </items>
        </Menu>
        <Menu text="Administracija">
            <items>
                <MenuItem text="Šifarnici"/>
                <MenuItem text="Studijski programi" onAction="#openStudProgrami"/>
                <MenuItem text="Školska godina"/>
                <MenuItem text="Korisnici"/>
            </items>
        </Menu>
    </MenuBar>

</VBox>
