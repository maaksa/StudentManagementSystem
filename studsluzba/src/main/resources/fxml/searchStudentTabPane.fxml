<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="studsluzba.client.fxmlcontrollers.StudentController">
    <Tab text="Pronadji studenta po imenu i prezimenu">
        <BorderPane fx:id="menu" prefHeight="428.0" prefWidth="581.0">
            <center>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Label text="Ime: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="imeTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Prezime" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <!--fx:id koristimo samo za one forme za koje ce nam biti potrebno da pristupamo iz java koda-->
                    <TextField fx:id="prezimeTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Button text="Search"/> <!--na klik dugmeta save u kontorleu pozivamo ovu metodu-->
                    </HBox>
                </GridPane>
            </center>
        </BorderPane>
    </Tab>

    <Tab text="Pronadji studenta po indexu">
        <BorderPane>
            <center>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Label text="Broj Indexa: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="brojIndeksaTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Smer: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <!--fx:id koristimo samo za one forme za koje ce nam biti potrebno da pristupamo iz java koda-->
                    <ComboBox fx:id="smerCB2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Button text="Search"/> <!--na klik dugmeta save u kontorleu pozivamo ovu metodu-->
                    </HBox>
                </GridPane>
            </center>
        </BorderPane>
    </Tab>
</TabPane>